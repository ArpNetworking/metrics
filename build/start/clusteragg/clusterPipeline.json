{
    "sinks":
    [
        {
            "type": "com.arpnetworking.tsdcore.sinks.AlertSink",
            "name": "cluster_emitter_alert_sink",
            "dynamicConfigurationFactory":
            {
                "type": "com.arpnetworking.configuration.jackson.MergingDynamicConfigurationFactory",
                "factories":
                [
                    {
                        "type": "com.arpnetworking.configuration.jackson.DirectoryDynamicConfigurationFactory",
                        "directories": [ "../../build/start/clusteragg/alerts" ]
                    },
                    {
                        "type": "com.arpnetworking.remet.gui.ReMetGuiDynamicConfigurationFactory",
                        "uri": "http://localhost:8080/v1/alerts/query?limit=1&context=CLUSTER"
                    }
                ]
            },
            "sink":
            {
                "type": "com.arpnetworking.tsdcore.sinks.MultiSink",
                "name": "cluster_emitter_multi_sink",
                "sinks":
                [
                    {
                        "type": "com.arpnetworking.tsdcore.sinks.PeriodicStatisticsSink",
                        "name": "cluster_emitter_periodic_statistics_sink"
                    },
                    {
                        "type": "com.arpnetworking.tsdcore.sinks.PeriodFilteringSink",
                        "name": "period_filtering_monitord_cluster_emitter_sink",
                        "excludeLessThan": "PT1M",
                        "sink":
                        {
                            "type": "com.arpnetworking.tsdcore.sinks.ClusterLimitingSink",
                            "name": "cluster_limiting_monitord_cluster_emitter_sink",
                            "stateFileDirectory": "logs",
                            "maxAggregations": 2000,
                            "sink":
                            {
                                "type": "com.arpnetworking.tsdcore.sinks.UnitMappingSink",
                                "name": "unit_mapping_cluster_emitter_monitord_sink",
                                "map":
                                {
                                    "NANOSECOND": "SECOND",
                                    "MICROSECOND": "SECOND",
                                    "MILLISECOND": "SECOND"
                                },
                                "sink":
                                {
                                    "type": "com.arpnetworking.tsdcore.sinks.TimeThresholdSink",
                                    "name": "time_threshold_cluster_emitter_monitord_sink",
                                    "threshold": "PT10M",
                                    "sink":
                                    {
                                        "type": "com.arpnetworking.tsdcore.sinks.MonitordSink",
                                        "name": "cluster_emitter_monitord_sink",
                                        "uri": "http://monitord-host.mycolo:80/results",
                                        "severityToStatus":
                                        {
                                            "critical": 2,
                                            "warning": 1
                                        },
                                        "unknownSeverityStatus": 1
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    ]
}
