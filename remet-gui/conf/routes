# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Assets.at(path="/public/html", file="index.html")

# Configuration
GET         /config              controllers.MetaController.config()

# Health checks
GET         /ping                controllers.MetaController.ping()

# Hosts
GET         /hosts/v1/query      @controllers.HostController.query(name: String ?= null, state: String ?= null, limit: java.lang.Integer ?= null, offset: java.lang.Integer ?= null, sort_by: String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
