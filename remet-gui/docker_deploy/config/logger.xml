<configuration>
    
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />
  <conversionRule conversionWord="sThrowable" converterClass="com.arpnetworking.logback.SingleLineExceptionConverter" />

  <!-- IMPORTANT: This logger is the default and intended for testing -->
  <appender name="RemetGuiLogger" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/opt/remet-gui/logs/remet-gui.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/opt/remet-gui/logs/remet-gui.%d{yyyyMMdd}.log.gz</fileNamePattern>
      <maxHistory>20</maxHistory>
      <cleanHistoryOnStart>true</cleanHistoryOnStart>
    </rollingPolicy>
    <encoder>
      <pattern>%date %t RequestId=%mdc{request_id} [%level] %logger : %message %sThrowable%nopex%n</pattern>
    </encoder>
  </appender>
   
  <appender name="RemetGuiAsync" class="ch.qos.logback.classic.AsyncAppender">
    <discardingThreshold>0</discardingThreshold>
    <appender-ref ref="RemetGuiLogger"/>
  </appender>

  <logger name="play" level="INFO" />
  <logger name="application" level="DEBUG" />
  <logger name="org.elasticsearch" level="INFO" />

  <root level="WARN">
    <appender-ref ref="RemetGuiAsync" />
  </root>
  
</configuration>
