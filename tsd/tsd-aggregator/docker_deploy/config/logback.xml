<configuration>

    <conversionRule conversionWord="sThrowable" converterClass="com.arpnetworking.logback.SingleLineExceptionConverter" />

    <!-- IMPORTANT: This logger is the default and intended for testing -->
    <appender name="TsdAggregatorLogger" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/opt/tsd-aggregator/logs/tsd-aggregator.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <timeBasedFileNamingAndTriggeringPolicy class="com.arpnetworking.logback.RandomizedTimeBasedFNATP">
              <maxOffsetInMillis>900000</maxOffsetInMillis>
            </timeBasedFileNamingAndTriggeringPolicy>
            <fileNamePattern>/opt/tsd-aggregator/logs/tsd-aggregator.%d{yyyyMMdd}.log.gz</fileNamePattern>
            <maxHistory>20</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder class="com.arpnetworking.logback.StenoEncoder">
            <injectContextLogger>true</injectContextLogger>
          <compressLoggerName>true</compressLoggerName>
        </encoder>
    </appender>
    
    <appender name="TsdAggregatorAsync" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="TsdAggregatorLogger"/>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <logger name="com.arpnetworking" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="TsdAggregatorAsync"/>
    </root>
</configuration>
